                                                                                    bgcolor="#f5f5f5"
                                                                                    border="0"
                                                                                    cellpadding="0"
                                                                                    cellspacing="0"
                                                                                    width="100%")
                                                                                    tr
                                                                                        td(style="line-height: 24px;" +
                                                                                        "font-family: Arial," +
                                                                                        "sans-serif;" +
                                                                                        "padding-left: 30px;" +
                                                                                        "padding-right: 30px;" +
                                                                                        "padding-bottom: 20px;")
                                                                                            table(align="left", border="0", cellpadding="0", cellspacing="0")
                                                                                                tr
                                                                                                    td(align="left", style="line-height: 24px")
