                                                                                                            // *** Title ***
                                                                                                            strong(style="color: #343a40") #{title}
                                                                                                        br
                                                                                                        span(style="font-size: 16px; line-height: 24px; color: #000000")
                                                                                                            // *** Message ***
                                                                                                            br
                                                                                                            | #{message}
                                                                                                        br
                                                                                                        span(style="font-size: 14px; line-height: 20px; color: #757575")
